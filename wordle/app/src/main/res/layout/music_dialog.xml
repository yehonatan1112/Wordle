<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:strokeColor="@color/ButtonStroke"
    android:gravity="center"
    android:background="#FCF0F2"
    android:layout_marginTop="0dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/top_background2" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="Music"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView3"
                    app:layout_constraintVertical_bias="0.26999998" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick"
                    android:textColor="#FEA9A7"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/textView4"
                    app:layout_constraintStart_toEndOf="@+id/textView4"
                    app:layout_constraintTop_toTopOf="@+id/textView4"
                    app:layout_constraintVertical_bias="0.269" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_banner">
                <Button
                    android:id="@+id/Harry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:fontFamily="casual"
                    android:text="Harry Potter"
                    android:background="@drawable/background_btn_menu"
                    android:textColor="@color/ButtonTextMainColor"
                    android:textSize="80px"
                    tools:ignore="MissingConstraints" />
                <Button
                    android:id="@+id/tikatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:fontFamily="casual"
                    app:layout_constraintTop_toBottomOf="@id/Harry"
                    android:text="tik katan"
                    android:background="@drawable/background_btn_menu"
                    android:textColor="@color/ButtonTextMainColor"
                    android:textSize="80px"
                    tools:ignore="MissingConstraints" />
                <Button
                    android:id="@+id/coming"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:fontFamily="casual"
                    app:layout_constraintTop_toBottomOf="@id/tikatan"
                    android:text="coming home"
                    android:background="@drawable/background_btn_menu"
                    android:textColor="@color/ButtonTextMainColor"
                    android:textSize="80px"
                    tools:ignore="MissingConstraints" />
                <Button
                    android:id="@+id/iwannabeyours"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:fontFamily="casual"
                    app:layout_constraintTop_toBottomOf="@id/coming"
                    android:text="I wanna be yours"
                    android:background="@drawable/background_btn_menu"
                    android:textColor="@color/ButtonTextMainColor"
                    android:textSize="80px"
                    tools:ignore="MissingConstraints" />
                <Button
                    android:id="@+id/billiejean"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:fontFamily="casual"
                    app:layout_constraintTop_toBottomOf="@id/iwannabeyours"
                    android:text="billie jean"
                    android:background="@drawable/background_btn_menu"
                    android:textColor="@color/ButtonTextMainColor"
                    android:textSize="80px"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>




